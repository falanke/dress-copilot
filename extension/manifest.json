{
  "manifest_version": 3,
  "name": "DressCopilot - 程序员穿搭助手",
  "version": "0.1.0",
  "description": "一句话描述需求，AI 帮你挑好衣服",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.vip.com/*",
    "https://category.vip.com/*",
    "https://list.vip.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.vip.com/*",
        "https://category.vip.com/*",
        "https://list.vip.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
